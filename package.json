{
    "name": "wasmple",
    "version": "0.0.2",
    "description": "a sample project for WebAssembly with Rust.",
    "scripts": {
        "prebuild:wasm": "rimraf ./wasmple/target",
        "build:wasm": "cd ./wasmple && cargo build --release",
        "postbuild:wasm": "wasm-snip -o ./wasmple/target/wasm32-unknown-unknown/release/wasmple.wasm ./wasmple/target/wasm32-unknown-unknown/release/wasmple.wasm",
        "prebuild:vite": "rimraf ./dist",
        "build:vite": "vite build",
        "build": "run-s build:wasm build:vite",
        "dev:wasm": "cd ./wasmple && cargo watch -x 'build --release'",
        "dev:vite": "vite --clearScreen false",
        "dev": "run-p dev:wasm dev:vite",
        "check:wasm": "cd ./wasmple && cargo check",
        "check": "run-s check:wasm",
        "clean": "rimraf ./wasmple/target ./dist"
    },
    "license": "MIT",
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "vite": "^3.1.7"
    }
}
